<style>
.map {
  position: relative;
  min-width: 400px;
  min-height: 400px;
  width: 100%;
  height: 100%;
}
</style>

<div>
  <ul>
    <% @events.each do |event|%>
      <li><a href="#" class='event-link' data-id="<%= event.id %>"><%= event.title %></a></li>
    <% end %>
  </ul>
</div>
<div class='event-info'>
</div>
<div class='map-container'>
</div>

<script>
$('.event-link').on('click', function(e) {
  e.preventDefault();
  var event_id = $(this).data('id')
    $.ajax({
      url: 'display_event',
      type: "POST",
      data: {event_id: event_id},
      dataType: 'script'
    });  
});

</script>
